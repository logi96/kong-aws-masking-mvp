{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../../../",
    "paths": {
      "@src/*": ["src/*"],
      "@agents/*": ["src/agents/*"],
      "@shared/*": ["src/shared/*"],
      "@core/*": ["src/core/*"],
      "@infra/*": ["src/infrastructure/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}