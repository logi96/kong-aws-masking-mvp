# Kong AWS Masker Environment Configuration
# Copy this file to .env and update with your values

# API Keys
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE

# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_DATABASE=0
REDIS_MAX_CONNECTIONS=100

# Kong Configuration
KONG_ADMIN_PORT=8001
KONG_PROXY_PORT=8000
KONG_LOG_LEVEL=info
KONG_MEMORY_LIMIT=4G
KONG_MEM_CACHE_SIZE=2048m
KONG_DATABASE=off
KONG_DECLARATIVE_CONFIG=/usr/local/kong/declarative/kong.yml

# Nginx Configuration
NGINX_PROXY_PORT=8082
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Node.js Backend Configuration
NODE_ENV=development
PORT=3000
API_TIMEOUT=60000
LOG_LEVEL=info

# Docker Network
NETWORK_NAME=claude-enterprise

# Time Zone
TZ=Asia/Seoul

# Performance Tuning
MAX_BODY_SIZE=10485760
CACHE_SIZE=10000
WORKER_POOL_SIZE=4
BATCH_SIZE=100

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MINUTE=60
RATE_LIMIT_HOUR=1000
ENABLE_BOT_DETECTION=true
ENABLE_IP_RESTRICTION=false

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
PUBLISH_EVENTS=true
EVENT_CHANNEL=aws-masking-events

# AWS Masking Feature Flags
MASK_EC2_INSTANCES=true
MASK_S3_BUCKETS=true
MASK_RDS_INSTANCES=true
MASK_IAM_ROLES=true
MASK_IAM_USERS=true
MASK_PRIVATE_IPS=true
MASK_VPC_IDS=true
MASK_SECURITY_GROUPS=true
MASK_LAMBDA_FUNCTIONS=true
MASK_EKS_CLUSTERS=true

# Logging
LOG_MASKED_REQUESTS=true
LOG_DIRECTORY=/var/log
LOG_RETENTION_DAYS=30

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false