# Kong AWS Masking 이벤트 구독을 위한 외부 시스템 환경 설정
# 파일명: .env

# Kong Redis 연결 정보
KONG_REDIS_HOST=localhost
KONG_REDIS_PORT=6379
KONG_REDIS_PASSWORD=your-kong-redis-password
KONG_REDIS_DB=0

# 연결 설정
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=50

# 구독할 Kong 채널 (변경하지 마세요)
KONG_MASKING_CHANNEL=aws-masker:events:masking
KONG_UNMASKING_CHANNEL=aws-masker:events:unmasking
KONG_ALERTS_CHANNEL=aws-masker:alerts:security
KONG_METRICS_CHANNEL=aws-masker:metrics:performance

# 이벤트 처리 설정
ENABLE_MASKING_EVENTS=true
ENABLE_UNMASKING_EVENTS=true
ENABLE_ALERT_EVENTS=true
ENABLE_METRICS_EVENTS=false

# 로깅 설정
LOG_LEVEL=info
LOG_FILE=/var/log/kong-event-subscriber.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 성능 튜닝
EVENT_BUFFER_SIZE=1000
BATCH_PROCESS_SIZE=50
PROCESS_INTERVAL_MS=1000

# 알림 설정 (선택사항)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@company.com
EMAIL_PASS=your-app-password

# 모니터링
HEALTH_CHECK_PORT=3001
METRICS_PORT=9090
ENABLE_PROMETHEUS=true