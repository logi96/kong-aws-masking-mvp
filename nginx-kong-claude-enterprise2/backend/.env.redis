# Redis Integration Environment Variables
# For Kong AWS Masker Plugin Redis Integration

# Redis Connection Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Pool Settings
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_ENABLE_OFFLINE_QUEUE=false

# Masking Settings
MASKING_TTL=604800  # 7 days in seconds
MASKING_MAX_ENTRIES=10000
MASKING_CLEAN_INTERVAL=300  # 5 minutes

# Cache Settings  
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Kong Plugin Redis Settings
KONG_REDIS_HOST=redis
KONG_REDIS_PORT=6379
KONG_REDIS_TIMEOUT=2000
KONG_REDIS_KEEPALIVE_POOL_SIZE=100
KONG_REDIS_KEEPALIVE_TIMEOUT=60000

# Feature Flags
USE_REDIS=true
REDIS_FALLBACK=true
ENABLE_REDIS_EVENTS=true
ENABLE_DISTRIBUTED_LOCKING=true

# Monitoring
ENABLE_REDIS_MONITORING=true
REDIS_HEALTH_CHECK_INTERVAL=5000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000