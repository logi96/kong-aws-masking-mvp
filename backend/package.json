{
  "name": "kong-aws-masking-backend",
  "version": "1.0.0",
  "description": "Backend API for Kong AWS Masking MVP - executes AWS CLI and integrates with Claude API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:dev": "NODE_ENV=development node server.js", 
    "start:test": "NODE_ENV=test node server.js",
    "dev": "nodemon server.js",
    "dev:prod": "NODE_ENV=production nodemon server.js",
    "dev:test": "NODE_ENV=test nodemon server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:unit": "NODE_ENV=test jest --testPathPattern=tests/unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=tests/integration",
    "test:analyze": "NODE_ENV=test jest tests/unit/analyze.test.js --verbose --testTimeout=30000",
    "test:env": "node scripts/test-claude-api.js",
    "lint": "eslint src/app.js src/api/routes/health.js src/api/middlewares/errorHandler.js tests/unit/health.test.js tests/unit/app.test.js",
    "lint:fix": "eslint src/app.js src/api/routes/health.js src/api/middlewares/errorHandler.js tests/unit/health.test.js tests/unit/app.test.js --fix",
    "type-check": "node scripts/simple-type-check.js",
    "quality:check": "npm run lint && npm run type-check && npm test:unit",
    "quality:report": "node scripts/quality-metrics.js",
    "security:audit": "npm audit --production",
    "precommit": "npm run quality:check",
    "env:check": "node -r dotenv/config -e \"console.log('NODE_ENV:', process.env.NODE_ENV); console.log('AWS_REGION:', process.env.AWS_REGION); console.log('PORT:', process.env.PORT); console.log('TZ:', process.env.TZ);\""
  },
  "keywords": [
    "kong",
    "aws",
    "masking",
    "security",
    "api-gateway",
    "claude-api"
  ],
  "author": "Infrastructure Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.1",
    "@anthropic-ai/sdk": "^0.14.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "jsdoc": "^3.6.11",
    "typescript": "^5.1.3",
    "husky": "^8.0.3",
    "@types/node": "^20.3.1",
    "@types/express": "^4.17.17"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "bugs": {
    "url": "."
  },
  "homepage": ".",
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 30000,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      },
      "./src/services/": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ]
  }
}