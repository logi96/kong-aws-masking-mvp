# Claude API Configuration
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE

# Redis Configuration
REDIS_PASSWORD=StrongPassword123!
REDIS_MAX_MEMORY=512mb
REDIS_DB=0

# Kong Configuration
KONG_LOG_LEVEL=info
KONG_MEMORY_LIMIT=1024m
KONG_CPU_LIMIT=0.5

# Nginx Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Network Ports
CLAUDE_PROXY_PORT=8082
KONG_ADMIN_PORT=8001
REDIS_PORT=6379

# Container Names
NGINX_CONTAINER_NAME=nginx-claude-proxy
KONG_CONTAINER_NAME=kong-gateway
REDIS_CONTAINER_NAME=redis-cache
CLIENT_CONTAINER_NAME=claude-client

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
PROXY_TIMEOUT=60
MAX_REQUEST_SIZE=10M

# Development/Production Mode
NODE_ENV=development